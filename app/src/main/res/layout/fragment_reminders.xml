<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RemindersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/nav_search"
                    app:tint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Search"
                    android:minHeight="48dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Calendar view -->
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:dateTextAppearance="@android:style/TextAppearance.Material.Button"
                android:weekDayTextAppearance="@android:style/TextAppearance.Material.Caption"
                android:showWeekNumber="false"
                android:background="@android:color/white" />

            <!-- Buttons grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginTop="16dp">

                <!-- Today button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:id="@+id/todaybutton"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/nav_today"
                        app:tint="#03A9F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Scheduled button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/scheduledbutton"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/nav_calendar"
                        app:tint="#03A9F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduled"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- All button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:id="@+id/allbutton"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/nav_all"
                        app:tint="#03A9F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Flagged button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:id="@+id/flaggedbutton"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/nav_flag"
                        app:tint="#03A9F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flagged"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Completed button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:id="@+id/completedbutton"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/nav_reminders"
                        app:tint="@color/dark_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="14sp"
                        android:textColor="@color/dark_grey"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </GridLayout>

            <!-- Events Container -->
            <LinearLayout
                android:id="@+id/eventsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">
            </LinearLayout>

            <!-- No Reminders TextView -->
            <TextView
                android:id="@+id/noRemindersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No reminders available."
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_add"
        android:id="@+id/addReminderButton"
        app:tint="@android:color/white"
        android:backgroundTint="@color/blue"
        />
</RelativeLayout>
